
{
  "manifest_version": 3,
  "name": "Token Inspector",
  "version": "1.0",
  "description": "A Chrome extension to inspect and analyze design tokens and hard-coded CSS values on webpages.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "devtools_page": "devtools.html",
  "action": {
    "default_popup": "popup.html"
  }
}
